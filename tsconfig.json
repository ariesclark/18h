{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
		"moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"types": ["node"],
    "typeRoots": ["./src/@types", "./src/node_modules/@types"]
  },
  "include": ["src/**/*"]
}
